/* pages/certification/certification.wxss */
.certification_box{background: #fff;margin-bottom: 20rpx;}
.certification_list{overflow: hidden;padding: 0 30rpx;}
.bianji{float: right;color: #8A8F9B;font-size: 26rpx;}
.bianji image{width: 28rpx;height: 33rpx;vertical-align: middle}
.certification_list1{display: flex;flex-direction: row;margin: 0 30rpx;border-bottom: 1px solid #E6E6E6}
.certification_list1 label{line-height: 100rpx;width: 220rpx;text-align: left}
.certification_list1 input{height: 100rpx;line-height: 100rpx;width: 440rpx;}

.right_jt{width: 12rpx;height: 20rpx;float: right;margin-top: 35rpx}
.submit{width: 606rpx;height: 83rpx;line-height: 83rpx;margin:30rpx auto; background: linear-gradient(#FFCA31, #FDA823);border-radius: 10rpx;text-align: center;color: #fff;font-weight: bold;font-size: 32rpx;}
.picker{width: 440rpx;line-height: 100rpx;}
.addimg{width: 750rpx;}
.addimg button{width: 280rpx;height: 168rpx;margin:10rpx 20rpx 30rpx 0;display:inline-block}
.certification_list .fanmian{height: 40rpx;line-height: 40rpx;display: inline-block;padding: 20rpx 0}



.common-tc{position: fixed;top: 0;width: 100%;height: 100%;background: rgba(0,0,0,0.3)}
.common_content{width: 490rpx;height: 300rpx;background: #fff;border-radius: 20rpx;margin: 30% auto;position: relative;overflow: hidden}
.content_tc{padding: 70rpx 100rpx;display: inline-block;text-align: center;line-height: 50rpx;}
.common_btn{position: absolute;bottom: 0;height: 86rpx;line-height: 86rpx;border-top: 1px solid #E6E6E6;width: 100%;}
.common_btn text{display: inline-block;width: 50%;text-align: center}
.common_btn text:last-child{background: #FFA826;color: #fff;font-size: 30rpx;}
.disno{display: none}
