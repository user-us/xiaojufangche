        </view>
      </view>
      <view class='yifa'><text class='yiwan'>已完成</text><text class='shan' bindtap='del'>删除订单</text></view>
    </view>
  </view>
  <view class="right-item {{tabArr.curBdIndex=='1'? 'active' : ''}}">2
  </view>
  <view class="right-item {{tabArr.curBdIndex=='2'? 'active' : ''}}">3
  </view>
  <view class="right-item {{tabArr.curBdIndex=='3'? 'active' : ''}}">4
