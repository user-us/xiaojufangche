.address{
  height: 148rpx;
  line-height: 148rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.address image{
  width:14rpx;
  height: 27rpx;
  padding:0 25rpx;
  margin-top: 50rpx;
  float: right;
}
.adds{
  width:665rpx;
  float: right;
  line-height: 45rpx;
}
.adds text{
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.adds text:last-child{
  color: #8A8F9B;
  margin-top: 15rpx;
}
.adds text:first-child{
  margin-top: 22rpx;
  font-size: 36rpx;
}
.affcon{
  background: #fff;
  margin-bottom: 20rpx;
}
.zhright{
  font-size: 30rpx;
  line-height: 51rpx;
  color: #FFA826;
  margin-top: 30rpx;
}
.zhright view{
  font-size: 24rpx;
  color: #8A8F9B;
  float: right;
  margin-right: 0;
}
.peiway{
  margin: 0 26rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #EFEFEF;
  color: #1D2124;
}
.peiway text:last-child{
 font-weight: bold;
 float: right;
}
.peidiscount{
  background: #fff;
}
.peidiscount image{
  width:14rpx;
  height: 27rpx;
  float: right;
  margin-top: 30rpx;
  margin-left: 14rpx;
}
.affcon .peiway:last-child,.peidiscount .peiway{
  border: 0;
}
.aff_foot{
  width:100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  color: #333333;
  position: fixed;
  left: 0;
  bottom: 0;
}
.aff_foot text:first-child{
  padding-left: 26rpx;
}
.aff_foot .co2{
  color: #FFA826;
}
.aff_foot text:last-child{
  float: right;
  margin-right: 26rpx;
  width:216rpx;
  line-height: 72rpx;
  height: 72rpx;
  text-align: center;
  background:linear-gradient(0deg,rgba(255,202,49,1),rgba(253,168,35,1));
  border-radius:10rpx;
  color: #fff;
  margin-top: 14rpx;
}
