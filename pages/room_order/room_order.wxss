@import "/pages/room_dl/room_dl";
page{
  background: #EAEBED;
  font-size: 26rpx;
  height: 100%;
}
.sw_box{
  width:100%;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
}
.swiper-tab{  
    background: #fff;
    width:94%;  
    line-height: 80rpx;
    height: 80rpx;
    margin: 0 auto; 
    border-bottom: 1rpx solid#EFEFEF;
  }  
.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  text-align: center;
  height: 67rpx;line-height: 67rpx;
  color: #A0A2A3;
  width: 20%;
} 
