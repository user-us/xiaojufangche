.on text{  
  border-bottom: 3px solid #FFA826;
  color: #000000;
  padding-bottom: 20rpx;
}  
.swiper-box{ display: block; min-height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
}  
.tab-right{ 
  line-height: 160%; 
  margin-top: 80rpx;
} 
.tab-right .right-item{ 
  display: none; 
} 
.tab-right .right-item.active{ 
  display: block; 
} 
.jujue_tc{position: fixed;top: 0;width: 100%;height: 100%;background: rgba(0, 0, 0, 0.3)}
.jujue_cont{width: 560rpx;background: #fff;margin: 0 auto;height: 301rpx;border-radius: 20rpx;margin-top: 45%;text-align: center;position: relative;}
.jujue_title{font-size: 36rpx;display:block;height: 60rpx;line-height: 60rpx;padding-top: 50rpx;font-weight: bold}
.jujues{ font-size: 30rpx; color: #333333;}
.btn_jujue{position: absolute;bottom: 0;display: flex;flex-direction: row;width: 100%;height:86rpx;line-height: 86rpx;border-top: 1px solid #E6E6E6; }
.btn_jujue text{width: 50%;line-height: 86rpx;font-size: 30rpx;}
.success{color: #fff; background: #FFA826; border-bottom-right-radius: 20rpx;}
.disno{
  display: none;
}
.room_dai{
  background: #fff;
  padding: 0 26rpx;
  margin-bottom: 20rpx;
}
.pay,.pays{
  height: 98rpx;
  line-height: 98rpx;
}
.pay1{
  color: #FFA826;
}
.pay text:last-child{
  float: right;
  font-size: 24rpx;
  width: 142rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 6rpx;
  margin-top: 20rpx;
}
.pay2{
  background: #CECECE;
  color: #fff;
}
.pay3{
  background:linear-gradient(0deg,rgba(255,202,49,1),rgba(253,168,35,1));
  color: #fff;
}
.pay4{
  border: 1px solid #BCBCBC;
  color: #8A8F9B;
}
.pay5{
  color: #8A8F9B;
}